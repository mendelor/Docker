FROM ubuntu
RUN groupadd --non-unique --gid 23456 awesomegroup
RUN useradd --non-unique --system --uid 12345 --gid 23456 chanseok
USER chanseok


docker run -itd ubuntu bash
docker run -it --network dockerfiles_default --rm ubuntu bash
OR
/> docker run -t -i -d ubun
/> docker stats --format "table {{.Name}}\t{{.Container}}\t{{.CPUPerc}}"

apt-get update
apt-get install -y iputils-ping





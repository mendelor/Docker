FROM php:7.2.2-apache

RUN apt-get update && \
      apt-get -yq install \
      build-essential \
      vim \
      unzip \
      wget \
      zip

RUN apt-get update -y
RUN apt-get  install -y libcap2-bin
#command to set user non root
RUN setcap 'cap_net_bind_service=+ep' /usr/sbin/apache2
RUN getcap /usr/sbin/apache2
USER www-data
